<div class = "container">
<div>
<h1 class = "text-center">User details</h1>

</div>
<div class = "row">
<div class = "col-12">
<ul class="list-unstyled">
  <li class="media my-4">
    <div class="media-body">
      <h5 class="mt-0 mb-1"><strong>Name: </strong><%= @user.name%></h5>
    </div>
  </li>
</ul>
<div class = "row justify-content-center">
<div class = "col-sm-6">
<h3 class = "text-left">Upcoming Events</h3>
<ul class="list-group">
<% if @upcoming_events.count > 0 %>
  <% @upcoming_events.count.each do |event| %>
  <li class="list-group-item"><%= event.description%></li>
  <% end %>
<% else %>
  <p>This user has no upcoming events =(</p>
<% end %>
</ul>

</div>

</div>

<div class = "row justify-content-center">
<div class = "col-sm-6">
<h3 class = "text-left">Previously Attended Events</h3>
<ul class="list-group">
<% if @previous_events.count > 0 %>
  <% @previous_events.count.each do |event| %>
  <li class="list-group-item"><%= event.description%></li>
  <% end %>
<% else %>
  <p>This user has no attended events =(</p>
<% end %>
</ul>

</div>

</div>
</div>
</div>
<div class="d-flex justify-content-center">
<%= link_to 'Back to users', users_path, class: "btn btn-secondary mt-4" %>
</div>
