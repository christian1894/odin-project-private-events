<!DOCTYPE html>
<html>
  <head>
    <title>Private Events</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  </head>

  <body>

  <%= render "layouts/flash"%>
  
    <nav class="navbar navbar-expand-lg navbar-dark bg-secondary">
  <a class="navbar-brand" href="#">Private Events</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <%= link_to 'Events', events_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to 'Users', users_path, class: "nav-link" %>
      </li>
    </ul>
    <ul class="navbar-nav ml-auto">
    <% if @current_user %>
        <span class = "align-middle text-white mr-2 mb-2 mt-1">Hello, <%= @current_user.name %>!</span>
      <li class="nav-item">
        <%= link_to 'Logout', logout_user_path(@current_user), method: :delete, class: "btn btn-warning" %>
      </li>
      <% else %>
      <li class="nav-item">
        <%= link_to 'Sign In', new_user_path, class: "btn btn-info mr-2" %>
      </li>
      <li class="nav-item">
        <%= link_to 'Log in', sign_in_users_path, class: "btn btn-info mt-2 mt-lg-0" %>
      </li>
      <% end %>
    </ul>
  </div>
</nav>
    
    <%= yield %>
  </body>
</html>
